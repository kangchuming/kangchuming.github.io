#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/code/kangchuming.github.io/node_modules/.pnpm/vitepress@1.0.2_@algolia+cl_49e2da0dc381a4f3fee0a68e6b79eeb7/node_modules/vitepress/bin/node_modules:/mnt/d/code/kangchuming.github.io/node_modules/.pnpm/vitepress@1.0.2_@algolia+cl_49e2da0dc381a4f3fee0a68e6b79eeb7/node_modules/vitepress/node_modules:/mnt/d/code/kangchuming.github.io/node_modules/.pnpm/vitepress@1.0.2_@algolia+cl_49e2da0dc381a4f3fee0a68e6b79eeb7/node_modules:/mnt/d/code/kangchuming.github.io/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/code/kangchuming.github.io/node_modules/.pnpm/vitepress@1.0.2_@algolia+cl_49e2da0dc381a4f3fee0a68e6b79eeb7/node_modules/vitepress/bin/node_modules:/mnt/d/code/kangchuming.github.io/node_modules/.pnpm/vitepress@1.0.2_@algolia+cl_49e2da0dc381a4f3fee0a68e6b79eeb7/node_modules/vitepress/node_modules:/mnt/d/code/kangchuming.github.io/node_modules/.pnpm/vitepress@1.0.2_@algolia+cl_49e2da0dc381a4f3fee0a68e6b79eeb7/node_modules:/mnt/d/code/kangchuming.github.io/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../vitepress/bin/vitepress.js" "$@"
else
  exec node  "$basedir/../vitepress/bin/vitepress.js" "$@"
fi
